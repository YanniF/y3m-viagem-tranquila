<?xml version="1.0" encoding="utf-8"?>
 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
 
	<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	
	    <Button
	        android:id="@+id/buttonOpcao"
	        android:layout_width="302dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="48dp"
	        android:onClick="chamarMelhorOpcaoActivity"
	        android:text="@string/opcao" />
	    
		 <Button
		     android:id="@+id/buttonGasto"
		     android:layout_width="302dp"
		     android:layout_height="wrap_content"
		     android:layout_gravity="center_horizontal"
		     android:layout_marginTop="44dp"
		     android:onClick="chamarGastosActivity"
		     android:text="@string/gasto" />
	
	    <Button
	        android:id="@+id/buttonEmergencia"
	        android:layout_width="304dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="44dp"
	        android:onClick="chamarLigacoesActivity"
	        android:text="@string/emergencia" />
	
	    <Button
	        android:id="@+id/buttonDicas"
	        android:layout_width="302dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="40dp"
	        android:text="@string/dicas" />
    
     </LinearLayout>
</ScrollView>