<?xml version="1.0" encoding="utf-8"?>
 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
 
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="440dp"
	    android:orientation="vertical" >
	
    <Button
        android:id="@+id/button190"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:hint="@string/pm"
        android:onClick="ligarParaPoliciaMilitar"
        android:text="@string/pm" />

    <Button
        android:id="@+id/button191"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="@string/pr"
        android:onClick="ligarParaPoliciaRodoviaria"
        android:text="@string/pr" />

    <Button
        android:id="@+id/button192"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="ligarParaAmbulancia"
        android:text="@string/ambulancia" />
    
    <Button
        android:id="@+id/button193"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="@string/bombeiro"
        android:onClick="ligarParaBombeiro"
        android:text="@string/bombeiro" />  
   
    <Button
        android:id="@+id/buttonVolta"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:hint="@string/volta"
        android:onClick="voltar"
        android:text="@string/volta" />
    
     </LinearLayout>
</ScrollView>